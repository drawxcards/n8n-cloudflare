# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=<SECURE_PASSWORD>
POSTGRES_DB=n8ndb

# N8N Database Connection (references above for consistency)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_USER=${POSTGRES_USER}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD}
DB_POSTGRESDB_DATABASE=${POSTGRES_DB}

# N8N Security (Generate strong, unique values)
N8N_ENCRYPTION_KEY=<GENERATE_STRONG_ENCRYPTION_KEY>
N8N_USER_MANAGEMENT_JWT_SECRET=<GENERATE_STRONG_JWT_SECRET>

# N8N Features
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_PROXY_HOPS=1

# Domain Configuration
WEBHOOK_URL=https://yourdomain.com
VIRTUAL_HOST=yourdomain.com
LETSENCRYPT_HOST=yourdomain.com
LETSENCRYPT_EMAIL=<YOUR_EMAIL>

# ACME Configuration (references email for consistency)
DEFAULT_EMAIL=${LETSENCRYPT_EMAIL}

# Cloudflare Tunnel Configuration
CLOUDFLARED_TOKEN=<YOUR_CLOUDFLARED_TOKEN>
